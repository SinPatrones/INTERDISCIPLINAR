<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MenuOpciones">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical"/>
    </ScrollView>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:text="AGREGAR INVENTARIO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="gotoADDInventario"
                android:id="@+id/button_newinventario"/>
        <Button
                android:text="SCANEAR CODIGO BARRA"
                android:layout_width="match_parent"
                android:onClick="gotoSCAN"
                android:layout_height="wrap_content" android:id="@+id/button_ScanBarCode"/>
        <Button
                android:text="AGREGAR MOVIMIENTO"
                android:layout_width="match_parent"
                android:onClick="gotoADDMovimiento"
                android:layout_height="wrap_content" android:id="@+id/button_newMovimiento"/>
        <Button
                android:text="ADD OTROS (SOLICITAR ACCESO)"
                android:layout_width="match_parent"
                android:onClick="gotoADDOtros"
                android:layout_height="wrap_content" android:id="@+id/button_addOtros"/>
        <Button
                android:text="GENERAR REPORTES"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button_reportes"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>