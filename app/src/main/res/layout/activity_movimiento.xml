<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".movimientoActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">

                <Button
                        android:text="RECONOCER ELEMENTO"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/button_scanInventario"/>
            </RelativeLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="350dp" android:orientation="vertical">

                <Button
                        android:text="ENVIAR DATOS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/button_enviarMovimiento"/>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
                    <TextView
                            android:text="FECHA: "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView_fecha"/>
                    <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:text="Today"
                            android:ems="10"
                            android:id="@+id/editText_fecha"/>
                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
                    <TextView
                            android:text="ESTADO: "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView_estado"/>
                    <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:text="10"
                            android:ems="10"
                            android:id="@+id/editText_estado"/>
                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
                    <TextView
                            android:text="OBSERVACION: "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView_observacion"/>
                    <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:gravity="start|top"
                            android:ems="10"
                            android:id="@+id/editText_observacion"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>